<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#E0FFD9"
        >

        <TextView
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_x="42dp"
            android:layout_y="56dp"
            android:textSize="30dp"
            android:textColor="#1A7913"
            android:fontFamily="@font/ha"
            android:text="Learn_Emo"/>

        <Button
            android:id="@+id/b2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_x="320dp"
            android:layout_y="47dp"
            android:background="@drawable/ic_build_black_24dp"
            android:onClick="setting"
            />

        <ImageView
            android:id="@+id/b3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_x="240dp"
            android:layout_y="47dp"
            android:background="@drawable/ic_timeline_black_24dp"
            android:onClick="bt_graph"
            />
        <Button
            android:id="@+id/button1"
            android:textColor="#FFFFFF"
            android:textSize="38dp"
            android:layout_width="300dp"
            android:layout_height="74dp"
            android:layout_x="60dp"
            android:layout_y="200dp"
            android:background="@drawable/round_b1"
            android:onClick="myListener"
            android:text="표정 따라하기"/>
        <Button
            android:id="@+id/button2"
            android:textColor="#FFFFFF"
            android:textSize="38dp"
            android:layout_width="300dp"
            android:layout_height="74dp"
            android:layout_x="60dp"
            android:layout_y="320dp"
            android:background="@drawable/round_b1"
            android:onClick="myListener1"
            android:text="오늘 기분 어때?"/>
        <Button
            android:id="@+id/button3"
            android:textColor="#ffffff"
            android:textSize="38dp"
            android:layout_width="300dp"
            android:layout_height="74dp"
            android:layout_x="60dp"
            android:layout_y="440dp"
            android:background="@drawable/round_b1"
            android:onClick="myListener2"
            android:gravity="center"
            android:text="카드 맞추기"/>
        <Button
            android:id="@+id/button4"
            android:textColor="#FFFFFF"
            android:textSize="38dp"
            android:layout_width="300dp"
            android:layout_height="74dp"
            android:layout_x="60dp"
            android:layout_y="560dp"
            android:background="@drawable/round_b1"
            android:onClick="myListener3"
            android:text="사진설정하기"/>
    </AbsoluteLayout>

</FrameLayout>