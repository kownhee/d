<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <TextView
        android:background="#E0FFD9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 하루 어땠나요?"
        android:textSize="50dp"
        android:textColor="#000000"
        android:fontFamily="@font/ha"/>
    <Button
        android:background="@drawable/ic_date_range_black_24dp"
        android:layout_gravity="right"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:onClick="bt_diary"
       />

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:paddingHorizontal="20dp"
            android:paddingVertical="30dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/happycard"
                android:onClick="open"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:src="@drawable/happy"/>
            <ImageView
                android:id="@+id/sadcard"
                android:onClick="open"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:src="@drawable/sad"/>
            <ImageView
                android:id="@+id/angrycard"
                android:onClick="open"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/angry"/>
          <ImageView
              android:id="@+id/excited"
              android:onClick="open"
              android:layout_width="180dp"
              android:layout_height="180dp"
              android:src="@drawable/bb"/>
          <ImageView
              android:id="@+id/scary"
              android:onClick="open"
              android:layout_width="180dp"
              android:layout_height="180dp"
              android:src="@drawable/cc"/>
          <ImageView
              android:id="@+id/irritation"
              android:onClick="open"
              android:layout_width="180dp"
              android:layout_height="180dp"
              android:src="@drawable/dd"/>
          <ImageView
              android:id="@+id/confidence"
              android:onClick="open"
              android:layout_width="180dp"
              android:layout_height="180dp"
              android:src="@drawable/ee"/>
          <ImageView
              android:id="@+id/fun"
              android:onClick="open"
              android:layout_width="180dp"
              android:layout_height="190dp"
              android:src="@drawable/ff"/>

      </GridLayout>
    </ScrollView>
</LinearLayout>